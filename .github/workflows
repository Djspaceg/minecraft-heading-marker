name: Build Release APK

on:
  push:
    tags:
      - 'v*'
  workflow_dispatch:

jobs:
  build-release:
    runs-on: ubuntu-latest
    permissions:
      contents: write
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0
    
      - name: Set up JDK 17
        uses: actions/setup-java@v4
        with:
          java-version: '17'
          distribution: 'temurin'
          cache: gradle
    
      - name: Grant execute permission for gradlew
        run: chmod +x gradlew
    
      - name: Build release APK
        run: ./gradlew assembleRelease --stacktrace
    
      - name: Get version info
        id: version
        run: |
          # Get version name from Gradle (use tail to get only the version line)
          VERSION=$(./gradlew -q printVersion | tail -n 1)
          if [ -z "$VERSION" ]; then
            echo "Error: Failed to extract version"
            exit 1
          fi
          echo "version=$VERSION" >> $GITHUB_OUTPUT
          
          # Find the APK file (should be exactly one)
          APK_FILES=(app/build/outputs/apk/release/*.apk)
          APK_COUNT=${#APK_FILES[@]}
          if [ "$APK_COUNT" -ne 1 ]; then
            echo "Error: Expected exactly 1 APK file, found $APK_COUNT"
            ls -la app/build/outputs/apk/release/
            exit 1
          fi
          echo "apk_path=${APK_FILES[0]}" >> $GITHUB_OUTPUT
    
      - name: Upload release APK
        uses: actions/upload-artifact@v4
        with:
          name: photo-date-fixer-release-${{ steps.version.outputs.version }}
          path: ${{ steps.version.outputs.apk_path }}
          retention-days: 90
    
      - name: Create GitHub Release
        if: startsWith(github.ref, 'refs/tags/')
        uses: softprops/action-gh-release@v2
        with:
          files: ${{ steps.version.outputs.apk_path }}
          body: |
            Release APK for Photo Date Fixer ${{ steps.version.outputs.version }}
            
            **Note**: This APK is unsigned and built without signing configuration. To install:
            - Enable "Install from Unknown Sources" on your device
            - For signing instructions, see: https://developer.android.com/studio/publish/app-signing#sign-apk
          draft: false
          prerelease: false
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}